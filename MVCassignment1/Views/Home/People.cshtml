@model IEnumerable<MVCassignment2.Models.Person>

@{
    ViewBag.Title = "People";
}
<h2>People</h2>
<table><tr style="vertical-align: bottom;"><td>
    <table>
        @*using (Html.BeginForm("AddPerson", "Home"))*@
        @using (Html.BeginForm("People", "Home"))
        {
            <tr>
                <td colspan="4">
                    <p>Add person</p>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.TextBox("Name", "", new { placeholder = "Name" })
                </td>
                <td>
                    @Html.TextBox("PhoneNumber", "", new { placeholder = "Phone Number" })
                </td>
                <td>
                    @Html.TextBox("City", "", new { placeholder = "City" })
                </td>
                <td>
                    <input type="submit" value="Add" />
                </td>
            </tr>
        }
    </table>
</td>
<td style="width: 100%; text-align: -webkit-right;">
    <table>
        <tr><td><p></p></td></tr>
        @using (Html.BeginForm("Search", "Home"))
    {
        <tr>
            <td>
                @Html.CheckBox("CaseSensitive", true) Case sensitive &nbsp;&nbsp;
                @Html.TextBox("SearchString", "", new { placeholder = "Search" })
                <input type="submit" value="Search" />
            </td>
        </tr>
}

    </table>
    </td>
  </tr>
</table>

    <p>
        @ViewBag.SearchResultMessage
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Name", "SortByName")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.ActionLink("City", "SortByCity")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
    {
        <tr id="@( "perId" + item.Id )">
            @Html.Partial("_PersonItem", item)

        </tr>
}
    </table>
